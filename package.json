{
  "name": "@react-drilld/root",
  "private": true,
  "description": "The best DrillDown package for react",
  "keywords": ["react", "drill down", "drilld", "folder structure"],
  "author": "SinaShahoveisi <shahoveisysina@yahoo.com> (https://sinashahoveisi.github.io)",
  "workspaces": [
    "projects/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "publish": "lerna publish",
    "link": "lerna link",
    "changed": "lerna changed",
    "start": "lerna run --parallel start",
    "build": "lerna run build --scope react-drilld",
    "clean": "lerna run clean --scope react-drilld",
    "clean:all": "lerna clean",
    "watch": "lerna run watch --scope react-drilld",
    "package": "lerna exec --scope react-drilld -- npm pack",
    "lint": "eslint ./projects --fix --ext .ts,.tsx,.js,.json",
    "pretty": "prettier --write .",
    "precommit": "npx lint-staged",
    "prepare": "husky install",
    "preinstall": "echo 'install package for companext project'"
  },
  "devDependencies": {
    "@types/react": "^17.0.40",
    "@types/react-dom": "^18.0.4",
    "lerna": "^5.0.0",
    "prettier": "^2.6.2",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.25.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-loader": "3.0.3",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-css-modules": "^2.11.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-no-async-without-await": "^1.2.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.0"
  }
}
